<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dk.easv.demo.GUI.Controller.SongEditorController"
      spacing="15"
      style="-fx-padding: 20;">

    <Label text="Song Editor" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
        </rowConstraints>

        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Artist:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="artistField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Genre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="genreField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Duration:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="durationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="File Path:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextField fx:id="filePathField" prefWidth="200"/>
            <Button text="Browse..." onAction="#browseFile"/>
        </HBox>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Song" onAction="#saveSong" prefWidth="120"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#cancel" prefWidth="120"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>